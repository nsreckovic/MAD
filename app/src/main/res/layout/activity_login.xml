<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.LoginActivity">

    <ImageView
        android:id="@+id/LogoIv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_hospital_red_64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/iszpTv"
        android:layout_height="wrap_content"
        android:layout_width="192dp"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/LogoIv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/ISZP"
        android:textSize="20dp"
        />


    <EditText
        android:id="@+id/nameEt"

        android:layout_height="35dp"
        android:layout_width="0dp"
        android:layout_marginTop="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        app:layout_constraintTop_toBottomOf="@id/iszpTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint="@string/name_placeholder"
        android:inputType="text"
        android:selectAllOnFocus="true"

        android:background="@drawable/border_large"
        />

    <EditText
        android:id="@+id/surnameEt"

        android:layout_height="35dp"
        android:layout_width="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        app:layout_constraintTop_toBottomOf="@+id/nameEt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint="@string/surname_placeholder"
        android:inputType="text"
        android:selectAllOnFocus="true"

        android:background="@drawable/border_large"
        />

    <EditText
        android:id="@+id/hospitalEt"

        android:layout_height="35dp"
        android:layout_width="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        app:layout_constraintTop_toBottomOf="@+id/surnameEt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint="@string/hospital_placeholder"
        android:inputType="text"
        android:selectAllOnFocus="true"

        android:background="@drawable/border_large"
        />

    <EditText
        android:id="@+id/pinEt"

        android:layout_height="35dp"
        android:layout_width="120dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        app:layout_constraintTop_toBottomOf="@+id/hospitalEt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint="@string/enter_pin"
        android:inputType="numberPassword"
        android:selectAllOnFocus="true"
        android:textAlignment="center"

        android:background="@drawable/border_large"
        />

    <Button
        android:id="@+id/signinBtn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/pinEt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:text="@string/sign_in"


        />

</androidx.constraintlayout.widget.ConstraintLayout>