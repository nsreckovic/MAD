<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/infoTv"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/input_info"
        android:textSize="22dp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/addPatientIv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_person_add_teal_64dp"
        app:layout_constraintTop_toBottomOf="@id/infoTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/nameEt"

        android:layout_height="35dp"
        android:layout_width="0dp"
        android:layout_marginTop="96dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        app:layout_constraintTop_toBottomOf="@id/addPatientIv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint="@string/name_placeholder"
        android:inputType="text"
        android:selectAllOnFocus="true"

        android:background="@drawable/border_large"
        />

    <EditText
        android:id="@+id/surnameEt"

        android:layout_height="35dp"
        android:layout_width="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        app:layout_constraintTop_toBottomOf="@+id/nameEt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint="@string/surname_placeholder"
        android:inputType="text"
        android:selectAllOnFocus="true"

        android:background="@drawable/border_large"
        />

    <EditText
        android:id="@+id/symptomsEt"

        android:layout_height="35dp"
        android:layout_width="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        app:layout_constraintTop_toBottomOf="@+id/surnameEt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint="@string/input_symptoms_placeholder"
        android:inputType="text"
        android:selectAllOnFocus="true"

        android:background="@drawable/border_large"
        />

    <Button
        android:id="@+id/addBtn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/symptomsEt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:text="@string/input_btn_add"


        />
</androidx.constraintlayout.widget.ConstraintLayout>