<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/border_large"
    android:padding="16dp">

    <!-- Subject -->
    <TextView
        android:id="@+id/item_Subject_lbl_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/timetable_item_label_subject"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_Subject_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toEndOf="@id/item_Subject_lbl_Tv"
        app:layout_constraintTop_toTopOf="@id/item_Subject_lbl_Tv" />

    <!-- Type -->
    <TextView
        android:id="@+id/item_Type_lbl_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/timetable_item_label_type"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/item_Subject_lbl_Tv"
        app:layout_constraintTop_toBottomOf="@id/item_Subject_lbl_Tv" />

    <TextView
        android:id="@+id/item_Type_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toEndOf="@id/item_Type_lbl_Tv"
        app:layout_constraintTop_toTopOf="@id/item_Type_lbl_Tv" />

    <!-- Professor -->
    <TextView
        android:id="@+id/item_Professor_lbl_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/timetable_item_label_professor"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/item_Type_lbl_Tv"
        app:layout_constraintTop_toBottomOf="@id/item_Type_lbl_Tv" />

    <TextView
        android:id="@+id/item_Professor_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toEndOf="@id/item_Professor_lbl_Tv"
        app:layout_constraintTop_toTopOf="@id/item_Professor_lbl_Tv" />

    <!-- Room -->
    <TextView
        android:id="@+id/item_Room_lbl_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/timetable_item_label_room"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/item_Professor_lbl_Tv"
        app:layout_constraintTop_toBottomOf="@id/item_Professor_lbl_Tv" />

    <TextView
        android:id="@+id/item_Room_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toEndOf="@id/item_Room_lbl_Tv"
        app:layout_constraintTop_toTopOf="@id/item_Room_lbl_Tv" />

    <!-- Groups -->
    <TextView
        android:id="@+id/item_Groups_lbl_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/timetable_item_label_groups"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/item_Room_lbl_Tv"
        app:layout_constraintTop_toBottomOf="@id/item_Room_lbl_Tv" />

    <TextView
        android:id="@+id/item_Groups_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toEndOf="@id/item_Groups_lbl_Tv"
        app:layout_constraintTop_toTopOf="@id/item_Groups_lbl_Tv" />

    <!-- Time -->
    <TextView
        android:id="@+id/item_Time_lbl_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="@string/timetable_item_label_time"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/item_Time_Tv"
        app:layout_constraintTop_toTopOf="@id/item_Time_Tv" />

    <TextView
        android:id="@+id/item_Time_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_Subject_Tv" />

    <!-- Day -->
    <TextView
        android:id="@+id/item_Day_lbl_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/timetable_item_label_day"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/item_Time_lbl_Tv"
        app:layout_constraintTop_toBottomOf="@id/item_Time_lbl_Tv" />

    <TextView
        android:id="@+id/item_Day_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/item_Day_lbl_Tv"
        app:layout_constraintTop_toTopOf="@id/item_Day_lbl_Tv" />

</androidx.constraintlayout.widget.ConstraintLayout>