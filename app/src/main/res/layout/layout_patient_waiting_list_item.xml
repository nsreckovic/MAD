<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/border_large"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/patientPictureIv"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/patientNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/patientPictureIv"
        app:layout_constraintTop_toTopOf="@+id/patientPictureIv" />

    <TextView
        android:id="@+id/patientSurnameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/patientPictureIv"
        app:layout_constraintTop_toBottomOf="@+id/patientNameTv" />

    <TextView
        android:id="@+id/patientStateTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:lines="2"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/patientHospitalisationBtn"
        app:layout_constraintStart_toStartOf="@+id/patientPictureIv"
        app:layout_constraintTop_toBottomOf="@id/patientPictureIv" />

    <Button
        android:id="@+id/patientHealthyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/healthy"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/patientPictureIv"
        app:layout_constraintTop_toBottomOf="@+id/patientStateTv" />

    <Button
        android:id="@+id/patientHospitalisationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hospitalisation"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/patientHealthyBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>