<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/border_large">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dismissItemPatientPictureIv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dismissItemPatientNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/dismissItemPatientPictureIv"
        app:layout_constraintTop_toTopOf="@+id/dismissItemPatientPictureIv" />

    <TextView
        android:id="@+id/dismissItemPatientSurnameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/dismissItemPatientPictureIv"
        app:layout_constraintTop_toBottomOf="@+id/dismissItemPatientNameTv" />

    <TextView
        android:id="@+id/dismissItemPatientDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@id/dismissItemPatientPictureIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dismissItemPatientPictureIv" />


</androidx.constraintlayout.widget.ConstraintLayout>