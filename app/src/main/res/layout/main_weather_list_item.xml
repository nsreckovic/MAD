<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/container"
    android:elevation="5dp"
    android:paddingStart="32dp"
    android:paddingTop="16dp"
    android:paddingEnd="32dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/main_weather_item_Image_Iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_weather_item_Temperature_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/main_weather_item_Image_Iv"
        app:layout_constraintStart_toEndOf="@id/main_weather_item_Image_Iv"
        app:layout_constraintEnd_toStartOf="@+id/main_weather_item_City_Tv"
        app:layout_constraintTop_toTopOf="@+id/main_weather_item_Image_Iv" />

    <TextView
        android:id="@+id/main_weather_item_City_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_weather_item_Image_Iv" />

    <TextView
        android:id="@+id/main_weather_item_Date_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/main_weather_item_Image_Iv"
        app:layout_constraintStart_toStartOf="@id/main_weather_item_City_Tv" />


</androidx.constraintlayout.widget.ConstraintLayout>