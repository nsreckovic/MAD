<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/statistics_Title_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:text="@string/statistics_title"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statistics_Description_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statistics_Title_Tv" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statistics_Description_Tv"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <com.ns.mad_p2.presentation.view.custom.ChartRectangleView
                android:id="@+id/statistics_bar1_Cv"
                android:layout_width="30dp"
                android:layout_height="400dp"/>

            <TextView
                android:id="@+id/statistics_num1_Tv"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_weight="1"></Space>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <com.ns.mad_p2.presentation.view.custom.ChartRectangleView
                android:id="@+id/statistics_bar2_Cv"
                android:layout_width="30dp"
                android:layout_height="400dp"/>

            <TextView
                android:id="@+id/statistics_num2_Tv"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAlignment="center" />

        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_weight="1"></Space>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <com.ns.mad_p2.presentation.view.custom.ChartRectangleView
                android:id="@+id/statistics_bar3_Cv"
                android:layout_width="30dp"
                android:layout_height="400dp"/>

            <TextView
                android:id="@+id/statistics_num3_Tv"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAlignment="center" />

        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_weight="1"></Space>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <com.ns.mad_p2.presentation.view.custom.ChartRectangleView
                android:id="@+id/statistics_bar4_Cv"
                android:layout_width="30dp"
                android:layout_height="400dp"/>

            <TextView
                android:id="@+id/statistics_num4_Tv"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAlignment="center" />

        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_weight="1"></Space>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <com.ns.mad_p2.presentation.view.custom.ChartRectangleView
                android:id="@+id/statistics_bar5_Cv"
                android:layout_width="30dp"
                android:layout_height="400dp"/>

            <TextView
                android:id="@+id/statistics_num5_Tv"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>